# Database configuration
DB_HOST=localhost          # The hostname of your database server (e.g., localhost, 127.0.0.1, or a remote IP)
DB_PORT=3306               # The port your database server is running on (default for MySQL: 3306)
DB_NAME=template_db        # The name of the database to connect to
DB_USER=root               # The username for the database connection
DB_PASSWORD=your-password  # The password for the database connection

# API configuration
API_KEY=your-api-key-here  # Your API key for external services (e.g., third-party APIs)

# Application configuration
APP_ENV=development        # The environment the app is running in (e.g., development, production)
APP_PORT=3000              # The port your application will run on
APP_URL=http://localhost   # The base URL of your application
