# Force simple error message asset files

<IfModule mod_authz_core.c>
  <FilesMatch "\.(make|test|md|po|sh|.*sql|.*bson|tpl(\.php)?|svn-base|env|bak)$">
    Require all denied
  </FilesMatch>
</IfModule>

# Don't show directory listings for URLs which map to a directory

Options -Indexes

# Compression GZip

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Set the errors pages

ErrorDocument 400 /errors/400.html
ErrorDocument 401 /errors/401.html
ErrorDocument 403 /errors/403.html
ErrorDocument 404 /errors/404.html
ErrorDocument 500 /errors/500.html

# Set the default handler

DirectoryIndex index.php

# Réécriture d'URL pour un front controller

<IfModule mod_rewrite.c>
  RewriteEngine On
  # Si le site est dans un sous-dossier, adapte RewriteBase
  RewriteBase /template-project

# Block access to "hidden" directories whose names begin with

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule "(^|/)\." - [F]

## Rewrite rules

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
</IfModule>

## Location: /.htaccess
